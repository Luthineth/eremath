<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="8dp"
        tools:context=".MainActivitycalc">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="32sp"
            android:id="@+id/txtInput"
            android:gravity="end|center_vertical"
            android:maxLength="20"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="90dp"
            android:textColor="@color/colorPrimaryDark"
            tools:layout_editor_absoluteX="8dp"/>

    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="90dp"
            app:layout_goneMarginTop="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtInput"
            android:gravity="fill" app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="1.0"
    >

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center">

            <Button
                    android:text="7"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimaryDark"
                    android:layout_height="65dp"
                    android:onClick="onDigit"
                    android:id="@+id/btnSeven" android:textSize="18sp"/>

            <Button
                    android:text="8"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimaryDark"
                    android:layout_height="65dp"
                    android:onClick="onDigit"
                    android:id="@+id/btnEight" android:textSize="18sp"/>

            <Button
                    android:text="9"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="65dp"
                    android:onClick="onDigit"
                    android:background="@color/colorPrimaryDark"
                    android:id="@+id/btnNine" android:textSize="18sp"/>

            <Button
                    android:text="/"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="65dp"
                    android:onClick="onOperator"
                    android:background="@color/colorPrimary"
                    android:id="@+id/btnDivide" android:textSize="24sp"/>
        </TableRow>

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center">

            <Button
                    android:text="4"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="65dp"
                    android:background="@color/colorPrimaryDark"
                    android:onClick="onDigit"
                    android:id="@+id/btnFour" android:textSize="18sp"/>

            <Button
                    android:text="5"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="65dp"
                    android:background="@color/colorPrimaryDark"
                    android:onClick="onDigit"
                    android:id="@+id/btnFive" android:textSize="18sp"/>

            <Button
                    android:text="6"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="65dp"
                    android:background="@color/colorPrimaryDark"
                    android:onClick="onDigit"
                    android:id="@+id/btnSix" android:textSize="18sp"/>

            <Button
                    android:text="*"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="65dp"
                    android:background="@color/colorPrimary"
                    android:onClick="onOperator"
                    android:id="@+id/btnMultiply" android:textSize="24sp"/>
        </TableRow>

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center">

            <Button
                    android:text="1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="65dp"
                    android:background="@color/colorPrimaryDark"
                    android:onClick="onDigit"
                    android:id="@+id/btnOne" android:textSize="18sp"/>

            <Button
                    android:text="2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="65dp"
                    android:background="@color/colorPrimaryDark"
                    android:onClick="onDigit"
                    android:id="@+id/btnTwo" android:textSize="18sp"/>

            <Button
                    android:text="3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimaryDark"
                    android:layout_height="65dp"
                    android:onClick="onDigit"
                    android:id="@+id/btnThree" android:textSize="18sp"/>

            <Button
                    android:text="-"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="65dp"
                    android:background="@color/colorPrimary"
                    android:onClick="onOperator"
                    android:id="@+id/btnSubtract" android:textSize="24sp"/>
        </TableRow>

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@color/colorPrimary"
                android:gravity="center">

            <Button
                    android:text="."
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="65dp"
                    android:background="@color/colorPrimary"
                    android:onClick="onDecimalPoint"
                    android:id="@+id/btnDecimal" android:textSize="24sp"/>

            <Button
                    android:text="0"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="65dp"
                    android:background="@color/colorPrimaryDark"
                    android:onClick="onDigit"
                    android:id="@+id/btnZero" android:textSize="18sp"/>
            <Button
                    android:text="⌫"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="65dp"
                    android:background="@color/colorPrimary"
                    android:onClick="onDel"
                    android:id="@+id/btnDel" android:textSize="24sp"/>

            <Button
                    android:text="+"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="65dp"
                    android:background="@color/colorPrimary"
                    android:onClick="onOperator"
                    android:id="@+id/btnAdd" android:textSize="24sp"/>
        </TableRow>

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@color/colorPrimary"
        >

            <Button
                    android:text="("
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="65dp"
                    android:background="@color/colorPrimary"
                    android:onClick="onBracket1"
                    android:id="@+id/btnOpen" android:textSize="24sp"/>
            <Button
                    android:text=")"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="65dp"
                    android:background="@color/colorPrimary"
                    android:onClick="onBracket2"
                    android:id="@+id/btnClose" android:textSize="24sp"/>

            <Button
                    android:text="＝"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="65dp"
                    android:onClick="onEqual"
                    android:background="@color/colorPrimary"
                    android:id="@+id/btnEqual" android:textSize="24sp"/>

            <Button
                    android:text="C"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="65dp"
                    android:background="@color/colorPrimary"
                    android:onClick="onClear"
                    android:id="@+id/btnClear" android:textSize="18sp"/>
        </TableRow>
    </TableLayout>
</android.support.constraint.ConstraintLayout>